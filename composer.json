{
    "name": "smeghead/text-link-encoder",
    "description": "A library that converts any string containing a URL (such as a user-entered string) into a html string containing url link. Non-URL parts are html-encoded.",
    "type": "library",
    "keywords": [
        "text",
        "link",
        "encoder"
    ],
    "require": {
        "php" : ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0"
    },
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "Smeghead\\TextLinkEncoder\\": "src/"
        }
    },
    "authors": [
        {
            "name": "smeghead",
            "email": "smeghead7@gmail.com"
        }
    ],
    "scripts": {
        "test": [
            "php vendor/phpunit/phpunit/phpunit --colors test/"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse"
        ]
    }
}
